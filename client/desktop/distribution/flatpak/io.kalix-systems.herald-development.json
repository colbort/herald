{
  "app-id": "io.kalix_systems.herald",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.13",
  "sdk": "org.kde.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "herald",
  "tags": [
    "development",
    "devel"
  ],
  "desktop-file-name-suffix": " (Development)",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--filesystem=home",
    "--talk-name=org.freedesktop.Notifications",
    "--device=dri"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "build-args": [
      "--share=network"
    ],
    "env": {
      "CARGO_HOME": "/run/build/herald/cargo"
    }
  },
  "modules": [
    {
      "name": "libherald",
      "buildsystem": "simple",
      "builddir": true,
      "build-commands": [
        "cargo build -p herald --features deploy_desktop --release"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../../../.."
        }
      ]
    }
  ]
}
